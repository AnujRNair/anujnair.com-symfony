<nav>
    <ul class="pager">
        {% if (page * (noPerPage + 1) <= pagination.count) %}
            <li class="previous">
                <a href="{{ path(pageUrl, {page: page + 1, noPerPage: noPerPage}) }}">
                    <span class="icon-left-open"></span><span>Older</span>
                </a>
            </li>
        {% endif %}

        {% if page > 1 %}
            <li class="next">
                <a href="{{ path(pageUrl, {page: page - 1, noPerPage: noPerPage}) }}">
                    <span>Newer</span><span class="icon-right-open"></span>
                </a>
            </li>
        {% endif %}
    </ul>
</nav>