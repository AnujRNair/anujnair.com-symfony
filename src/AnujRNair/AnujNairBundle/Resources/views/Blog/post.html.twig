{% extends 'AnujNairBundle::mainLayout.html.twig' %}

{% block activeRoute '_an_blog_index' %}

{% block content %}
    <div class="row">
        <section class="col-md-8">
            {% include 'AnujNairBundle:Blog/Component:article.html.twig' with {'blog': blog, mini: false} %}
        </section>
        <aside class="col-md-4 blog-aside">
            <div class="row">
                <div class="col-md-12 col-sm-8">
                    <h3 class="title-header">You may also be interested in &hellip;</h3>
                    {% include 'AnujNairBundle:Components:singleDimensionalList.html.twig' with {
                        singleList: similarBlogPosts,
                        itemLinkUrl: '_an_blog_article',
                        itemLinkIdAttr: 'getId',
                        itemLinkTitleAttr: 'getUrlSafeTitle',
                        itemNameAttr: 'getTitle',
                        itemIcon: 'icon-calendar'
                    } %}
                </div>
            </div>
        </aside>
    </div>
{% endblock %}

